{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
		"allowJs": true, 
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true
  },
	"include": [
		"./**/*"
	],
	"exclude": [
		"dist/**/*"
	]
}
